<div id="transactionDemoPlaceholder" class="hidden">
  <div id="transference-demo" class="rounded-border relative-position info-block" ng-controller="TransactionCtrl">
    <h3>
      sample Bitcoin transaction
    </h3>
    <div class="row rounded-border">
      <div class="large-6 columns text-center right-border">
        <div class="info-block">
          <form> 
            <fieldset>
            <legend>Your sample wallet</legend>
            <div class="row separated-row"> 
              <div class="small-12 columns">
                <span>Send bitcoins from this address:</span>
                <div class="address-info-block">
                  <input type="radio" name="address" id="walletAddress" value="19s6nzcRuWWuXSikLNGmYsTdKkF8cBkFdJ" checked><label for="walletAddress">19s6nzcRuWWuXSikLNGmYsTdKkF8cBkFdJ</label>
                </div>
              </div>
            </div>
            <div class="row separated-row">
              <div class="small-3 small-centered columns">
                <label class="inline">{{remainingBitcoins()}}</label>
                <label class="inline small-right-padding">available</label>
              </div>
            </div>
            <div class="row collapse separated-row"> 
              <div class="small-3 columns">
                <label for="amount" class="right inline small-right-padding">amount: </label>
              </div>
              <div class="small-2 columns" id="amount">
                <input type="text" class="text-center has-tooltip" ng-model="input_amount"
                       title="1 bitcoin can be divided up to 8 decimal places (0.00000001 bitcoins are currently valued at about 0.00001 USD)" placeholder="0.5" />
              </div>
              <div class="small-4 columns">
                <span class="postfix radius"> bitcoins (BTC)</span>
              </div>
              <div class="small-3 columns"></div>
            </div>
            <div class="row collapse separated-row">
              <div class="small-2 columns">
                <span class="prefix radius button disabled">To:</span>
              </div>
              <div class="small-10 columns">
                <input type="text" placeholder="19s6nzcRuWWuXSikLNGmYsTdKkF8cBkFdJ" />
              </div>
            </div>
              <div class="row">
                <div class="small-12 columns">
                  <label class="button radius round" ng-click="transactionDemo()">Send</label>
                </div>
              </div>
            </fieldset>
          </form>
        </div>  
      </div>
      <div class="large-6 columns text-center">
        <div class="info-block">
          <fieldset>
            <legend>Shopping cart in your favorite web shop</legend>
            <div class="row separated-row">
              <div class="small-12 columns">
                Pair of warm socks
              </div>
            </div>
            <div class="row separated-row">
              <div class="small-12 columns">
                <%= image_tag "QR-shop.png", alt: "Shop QR of address" %>
              </div>
            </div>
            <div class="row separated-row address-info-block-shop">
              <div class="small-12 columns">
                <span>1JL27iKbmVBNBnwuST7aqyuE94ShS4CFE1</span>
              </div>
            </div>
            <div class="row separated-row top-border">
              <div class="small-12 columns">
                Other payment menthods
              </div>
            </div>
            <span class="hidden" id="open_private_key">5KVwAmmjHaxZ8hDGBybaoCwhdicK26gFFsDYm8RZYSfmdJrsB8i</span>
          </fieldset>
        </div>
      </div>
    </div>
  </div>
</div>